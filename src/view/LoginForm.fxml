<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginForm">
   <children>
      <VBox minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" minHeight="150.0" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Label fx:id="TitleLb" contentDisplay="CENTER" text="Appointment Scheduler">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font></Label>
               </children>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER" maxHeight="50.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="UserNameLb" maxWidth="100.0" minWidth="100.0" text="User Name:" />
                        <TextField fx:id="UserNameTxf" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" maxHeight="50.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <Label fx:id="PasswordLb" maxHeight="100.0" minWidth="100.0" text="Password: " />
                           </children>
                        </VBox>
                        <TextField fx:id="PasswordTxf" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <HBox alignment="TOP_CENTER" maxHeight="100.0" minHeight="75.0" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                     <children>
                        <Button fx:id="LoginBtn" mnemonicParsing="false" onAction="#OnLoginBtn" text="Log in">
                           <HBox.margin>
                              <Insets left="120.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="ExitBtn" mnemonicParsing="false" onAction="#OnExitBtn" text="Exit">
                           <HBox.margin>
                              <Insets top="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER" minHeight="75.0" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="ZoneIdLb" text="Label" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
